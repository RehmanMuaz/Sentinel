@page "/account/verify"
@model VerifyModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Email verification</title>
    <style>
        :root { font-family: 'Inter', Segoe UI, Arial, sans-serif; color: #e5e7eb; background: #070b12; }
        body { margin: 0; min-height: 100vh; display: flex; align-items: center; justify-content: center; background: #070b12; padding: 1.5rem; }
        .shell { width: 100%; max-width: 460px; background: #0d1522; border: 1px solid #1f2a3d; border-radius: 14px; padding: 1.5rem; box-shadow: 0 20px 50px rgba(0,0,0,0.35); text-align: center; }
        h1 { margin: 0 0 1rem; }
        .alert { padding: 0.85rem 1rem; border-radius: 10px; margin: 0.8rem 0; border: 1px solid transparent; }
        .alert.error { background: #3b1f28; color: #fca5a5; border-color: #7f1d1d; }
        .alert.success { background: #163024; color: #bbf7d0; border-color: #166534; }
        a { color: #93c5fd; text-decoration: none; }
    </style>
</head>
<body>
    <div class="shell">
        <h1>Email verification</h1>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.IsError ? "error" : "success")">@Model.Message</div>
        }
        <div>
            <a href="/account/login">Go to login</a>
        </div>
    </div>
</body>
</html>
