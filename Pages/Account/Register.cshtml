@page "/t/{slug}/account/register"
@model RegisterModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>
        <style>
        :root { font-family: 'Inter', Segoe UI, Arial, sans-serif; color: #e5e7eb; background: #070b12; }
        * { box-sizing: border-box; }
        body { margin: 0; min-height: 100vh; display: flex; align-items: center; justify-content: center; background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.08), transparent 30%), radial-gradient(circle at 80% 0%, rgba(16,185,129,0.08), transparent 25%), #070b12; padding: 1.5rem; }
        .shell { width: 100%; max-width: 420px; background: #0d1522; border: 1px solid #1f2a3d; border-radius: 14px; padding: 1.5rem; box-shadow: 0 20px 50px rgba(0,0,0,0.35); }
        h1 { margin: 0 0 1.25rem; text-align: center; letter-spacing: 0.3px; }
        form .row { display: flex; flex-direction: column; margin-bottom: 0.9rem; }
        label { font-weight: 600; margin-bottom: 0.35rem; color: #cbd5e1; }
        input { padding: 0.7rem 0.85rem; border: 1px solid #233146; border-radius: 10px; font-size: 0.95rem; background: #0a101a; color: #e5e7eb; transition: border 0.15s ease, box-shadow 0.15s ease; }
        input:focus { outline: none; border-color: #3b82f6; box-shadow: 0 0 0 2px rgba(59,130,246,0.2); }
        button { width: 100%; padding: 0.75rem 1rem; border: none; border-radius: 10px; background: linear-gradient(135deg, #2563eb, #1f5ad3); color: #fff; font-weight: 700; cursor: pointer; transition: transform 0.1s ease, box-shadow 0.1s ease; }
        button:hover { transform: translateY(-1px); box-shadow: 0 12px 28px rgba(37,99,235,0.25); }
        .muted { color: #7b8796; font-size: 0.9rem; text-align: center; margin-top: 0.6rem; }
        .alert { padding: 0.85rem 1rem; border-radius: 10px; margin: 0.8rem 0; border: 1px solid transparent; }
        .alert.error { background: #3b1f28; color: #fca5a5; border-color: #7f1d1d; }
    </style>
</head>
<body>
    <div class="shell">
        <h1>Create account for @Model.Slug</h1>
        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <div class="row">
                <label>Email</label>
                <input name="email" type="email" required />
            </div>
            <div class="row">
                <label>Password</label>
                <input name="password" type="password" required />
            </div>
            <div class="row">
                <label>Confirm password</label>
                <input name="confirmPassword" type="password" required />
            </div>
            <button type="submit">Create account</button>
        </form>
        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <div style="color:red">@Model.Error</div>
        }
        @if (!string.IsNullOrEmpty(Model.Success))
        {
            <div style="color:green">@Model.Success</div>
        }
    </div>
</body>
</html>
